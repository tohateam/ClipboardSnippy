<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
    <item
		android:state_focused="true"
		android:drawable="@color/focusedRow" /> <!-- focused -->
    <item 
		android:state_focused="true"
		android:state_pressed="true"
		android:drawable="@color/pressedRow" /> <!-- focused and pressed-->
    <item
		android:state_pressed="true"
		android:drawable="@color/pressedRow" /> <!-- pressed -->
    <item android:drawable="@color/defaultRow" /> <!-- default -->
</selector>
